<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="25dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="70dp"
            >

            <ImageButton
                android:id="@+id/linierButtonCreate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/ic_create_room" />

                <TextView
                    android:id="@+id/linierTextViewCreate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ConversationActivity_button_create_room"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="70dp"
            >

            <ImageButton
                android:id="@+id/linierButtonListRoom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_list_room"
                android:background="@null"
                />
            <TextView
                android:id="@+id/linierTextViewList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/ConversationActivity_button_list_room"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/signal_primary"
        >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/MessageRequestViconInformationRoom_header"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"

                    android:paddingLeft="10dp"
                    android:layout_gravity="left"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            >
            <TextView
                android:id="@+id/buttonCencel"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_gravity="right"
                />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
